<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackviking.hosh.ImageViewers.MyGalleryImageView"
    android:id="@+id/myGalleryImageViewRootLayout"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myGalleryImageViewImage"
        android:adjustViewBounds="true"/>

    <include layout="@layout/snippet_for_image"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deletePicture"
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_delete_image"
        android:tint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        app:fab_elevation="15dp"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setAsProfilePicture"
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_set_as_profile_pic"
        android:tint="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        app:fab_elevation="15dp"/>

</RelativeLayout>
