<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackviking.hosh.Settings.NotificationSetting"
    android:id="@+id/notificationRootLayout">

    <include layout="@layout/snippet_for_general"/>

    <LinearLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/white_backround_ripple_chats"
            android:padding="10dp"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="Newsletter Notification"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="10dp"
                android:layout_gravity="center"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/SCBSwitch"
                android:padding="5dp"
                android:id="@+id/notificationSwitch"
                android:textOff="OFF"
                android:textOn="ON"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/black"/>

    </LinearLayout>

</RelativeLayout>
