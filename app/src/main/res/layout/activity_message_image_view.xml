<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackviking.hosh.ImageViewers.MessageImageView"
    android:id="@+id/messageImageViewRootLayout"
    android:background="@color/black">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:id="@+id/messageImageViewView"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back_icon"
        android:tint="@color/colorPrimaryDark"
        android:id="@+id/exitThisActivity"
        android:layout_margin="4dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_save_picture"
        android:layout_alignParentEnd="true"
        android:tint="@color/colorPrimaryDark"
        android:id="@+id/saveThisPicture"
        android:layout_margin="4dp"/>

</RelativeLayout>
